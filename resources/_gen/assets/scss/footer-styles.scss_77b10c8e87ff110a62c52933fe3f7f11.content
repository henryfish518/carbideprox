.site-footer .mobile-bottom-nav{position:fixed;bottom:0;left:0;right:0;background:#fff;box-shadow:0 -2px 10px rgba(0,0,0,.1);display:flex;justify-content:space-around;z-index:1000;padding:8px 0}.site-footer .mobile-bottom-nav .nav-item{flex:1;text-align:center}.site-footer .mobile-bottom-nav .nav-item .nav-link{display:flex;flex-direction:column;align-items:center;text-decoration:none;color:var(--text-secondary);transition:color .3s ease}.site-footer .mobile-bottom-nav .nav-item .nav-link i{font-size:1.2rem;margin-bottom:4px}.site-footer .mobile-bottom-nav .nav-item .nav-link span{font-size:.75rem}.site-footer .mobile-bottom-nav .nav-item .nav-link:hover,.site-footer .mobile-bottom-nav .nav-item .nav-link:active{color:var(--primary-color)}.site-footer .footer-main{background:var(--bg-dark,#222);color:#fff;padding:3rem 0 1rem}.site-footer .footer-main .footer-content{display:grid;grid-template-columns:repeat(auto-fit,minmax(200px,1fr));gap:2rem;margin-bottom:2rem}.site-footer .footer-main .footer-content .footer-section .footer-title{font-size:1.2rem;font-weight:600;margin-bottom:1rem;color:#fff;position:relative;padding-bottom:.5rem}.site-footer .footer-main .footer-content .footer-section .footer-title::after{content:'';position:absolute;bottom:0;left:0;width:40px;height:2px;background:var(--primary-color)}.site-footer .footer-main .footer-content .footer-section .footer-links{list-style:none;padding:0;margin:0}.site-footer .footer-main .footer-content .footer-section .footer-links li{margin-bottom:.6rem}.site-footer .footer-main .footer-content .footer-section .footer-links li a{color:rgba(255,255,255,.8);text-decoration:none;transition:color .3s ease}.site-footer .footer-main .footer-content .footer-section .footer-links li a:hover{color:var(--primary-color)}.site-footer .footer-main .footer-bottom{display:flex;justify-content:space-between;align-items:center;padding-top:1.5rem;border-top:1px solid rgba(255,255,255,.1)}.site-footer .footer-main .footer-bottom .copyright p{margin:0;font-size:.9rem;color:rgba(255,255,255,.6);line-height:1.5}.site-footer .footer-main .footer-bottom .footer-social{display:flex;gap:1rem}.site-footer .footer-main .footer-bottom .footer-social a{display:flex;align-items:center;justify-content:center;width:36px;height:36px;background:rgba(255,255,255,.1);color:#fff;border-radius:50%;text-decoration:none;transition:background .3s ease,color .3s ease}.site-footer .footer-main .footer-bottom .footer-social a:hover{background:var(--primary-color);color:#fff}.site-footer .back-to-top{position:fixed;bottom:80px;right:20px;width:40px;height:40px;background:var(--primary-color);color:#fff;border-radius:50%;display:flex;align-items:center;justify-content:center;cursor:pointer;opacity:.7;transition:opacity .3s ease,transform .3s ease;z-index:999;display:none}.site-footer .back-to-top:hover{opacity:1;transform:translateY(-5px)}.site-footer .back-to-top i{font-size:1rem}