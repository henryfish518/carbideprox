// 移动端访问性优化
.a11y-optimized {
  // 焦点指示器
  *:focus {
    outline: 2px solid var(--primary-color);
    outline-offset: 2px;
  }
  
  // 减少动画
  @media (prefers-reduced-motion: reduce) {
    * {
      animation: none;
      transition: none;
    }
  }
  
  // 高对比度模式
  @media (prefers-contrast: high) {
