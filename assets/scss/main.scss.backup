    * {
      animation: none;
      transition: none;
    }
  }
  
  // 高对比度模式
  @media (prefers-contrast: high) {
    .btn, .nav-item a {
      border: 2px solid currentColor;
    }
  }
}

// 移动端工具类
.mobile-utils {
  // 隐藏桌面元素
  &.desktop-only {
    @media (max-width: 768px) {
      display: none !important;
    }
  }
  
  // 显示移动端元素
  &.mobile-only {
    display: none;
    
