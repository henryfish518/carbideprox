      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
      
      .module-title {
        font-size: 1.5rem;
      }
      
      .view-all {
        font-size: 0.85rem;
      }
    }
    
    .articles-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
      
      .article-card {
        .article-image {
          height: 180px;
        }
        
        .article-content {
          padding: 1rem;
          
          .article-meta {
            margin-bottom: 0.75rem;
            
            .article-date {
              font-size: 0.75rem;
            }
            
            .article-tag {
              font-size: 0.7rem;
              padding: 0.1rem 0.4rem;
            }
          }
          
          .article-title a {
            font-size: 0.95rem;
          }
          
          .article-excerpt {
            font-size: 0.8rem;
            min-height: 2.2rem;
          }
          
          .article-footer {
            .article-stats {
              gap: 0.6rem;
              
              .stat {
                font-size: 0.7rem;
              }
            }
          }
        }
      }
    }
  }
}

@media (max-width: 480px) {
  .article-module {
    padding: 2rem 0;
    
    .module-header {
      margin-bottom: 1.25rem;
      
      .module-title {
        font-size: 1.3rem;
      }
    }
    
    .articles-grid {
      .article-card {
        .article-image {
          height: 160px;
        }
        
        .article-content {
          padding: 0.875rem;
          
          .article-title a {
            font-size: 0.9rem;
          }
          
          .article-excerpt {
            font-size: 0.75rem;
          }
        }
      }
    }
  }
}

