@media (max-width: 480px) {
  .article-module {
    padding: 2rem 0;
    
    .module-header {
      margin-bottom: 1.25rem;
      
      .module-title {
        font-size: 1.3rem;
      }
    }
    
    .articles-grid {
      .article-card {
        .article-image {
          height: 160px;
        }
        
        .article-content {
          padding: 0.875rem;
          
          .article-title a {
