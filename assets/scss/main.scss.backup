}

// 移动端工具类
.mobile-utils {
  // 隐藏桌面元素
  &.desktop-only {
    @media (max-width: 768px) {
      display: none !important;
    }
  }
  
  // 显示移动端元素
  &.mobile-only {
    display: none;
    
    @media (max-width: 768px) {
