// 移动端访问性优化
.a11y-optimized {
  // 焦点指示器
  *:focus {
    outline: 2px solid var(--primary-color);
    outline-offset: 2px;
  }
  
  // 减少动画
  @media (prefers-reduced-motion: reduce) {
    * {
      animation: none;
      transition: none;
    }
  }
  
  // 高对比度模式
  @media (prefers-contrast: high) {
    .btn, .nav-item a {
      border: 2px solid currentColor;
    }
  }
}

// 移动端工具类
.mobile-utils {
  // 隐藏桌面元素
  &.desktop-only {
    @media (max-width: 768px) {
      display: none !important;
    }
  }
  
  // 显示移动端元素
  &.mobile-only {
    display: none;
    
    @media (max-width: 768px) {
      display: block !important;
    }
  }
  
  // 弹性容器
  &.flex-mobile {
    display: flex;
    flex-direction: column;
    
    @media (max-width: 768px) {
      flex-direction: row;
      align-items: center;
      
      &.col-mobile {
        flex-direction: column;
        align-items: stretch;
      }
    }
  }
}

// 文章模块样式
.article-module {
  padding: 4rem 0;
  background: var(--bg-secondary);
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-md);
  }
  
  .module-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    
    .module-title {
      font-size: 1.8rem;
      font-weight: 700;
      color: var(--primary-color);
      position: relative;
      
      &::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 0;
        width: 60px;
        height: 3px;
        background: var(--primary-color);
        border-radius: 2px;
      }
    }
    
    .view-all {
      display: inline-flex;
      align-items: center;
      color: var(--text-secondary);
      text-decoration: none;
      font-size: 0.9rem;
      transition: all 0.3s ease;
      
      &:hover {
        color: var(--primary-color);
        
        i {
          transform: translateX(3px);
        }
      }
      
      i {
        margin-left: 0.5rem;
        transition: transform 0.3s ease;
      }
    }
  }
  
  .articles-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    
    .article-card {
      background: var(--bg-primary);
      border-radius: var(--radius-lg);
      overflow: hidden;
      box-shadow: var(--shadow-sm);
      transition: all 0.3s ease;
      
      &:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-lg);
      }
      
      .article-image {
        height: 160px;
        overflow: hidden;
        position: relative;
        
        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
          transition: transform 0.3s ease;
        }
        
        &.placeholder {
          display: flex;
          align-items: center;
          justify-content: center;
          background: var(--bg-secondary);
          color: var(--text-secondary);
          
          i {
            font-size: 2rem;
            opacity: 0.5;
          }
        }
        
        &:hover img {
          transform: scale(1.05);
        }
      }
      
      .article-content {
        padding: 1.2rem;
        
        .article-meta {
          display: flex;
          align-items: center;
          justify-content: space-between;
          margin-bottom: 0.8rem;
          
          .article-date {
            font-size: 0.8rem;
            color: var(--text-secondary);
          }
          
          .article-tag {
            font-size: 0.75rem;
            padding: 0.15rem 0.5rem;
            background: var(--primary-color);
            color: white;
            border-radius: 20px;
          }
        }
        
        .article-title {
          margin-bottom: 0.8rem;
          
          a {
            text-decoration: none;
            color: var(--text-primary);
            font-size: 1rem;
            font-weight: 600;
            line-height: 1.3;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            
            &:hover {
              color: var(--primary-color);
            }
          }
        }
        
        .article-excerpt {
          color: var(--text-secondary);
          font-size: 0.85rem;
          line-height: 1.5;
          display: -webkit-box;
          -webkit-line-clamp: 2;
          -webkit-box-orient: vertical;
          overflow: hidden;
          margin-bottom: 1rem;
          min-height: 2.5rem;
        }
        
        .article-footer {
          display: flex;
          align-items: center;
          justify-content: space-between;
          
          .article-stats {
            display: flex;
            gap: 0.8rem;
            
            .stat {
              display: flex;
              align-items: center;
              font-size: 0.75rem;
              color: var(--text-secondary);
              
              i {
                margin-right: 0.3rem;
                font-size: 0.8rem;
              }
            }
          }
          
          .read-more {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 28px;
            height: 28px;
            background: var(--primary-color);
            color: white;
            border-radius: 50%;
            text-decoration: none;
            transition: all 0.3s ease;
            
            &:hover {
              background: var(--secondary-color);
              transform: scale(1.1);
            }
            
            i {
              font-size: 0.7rem;
            }
          }
        }
      }
    }
    
    .no-articles {
      grid-column: 1 / -1;
      text-align: center;
      padding: 3rem 0;
      color: var(--text-secondary);
      font-style: italic;
    }
  }
}

