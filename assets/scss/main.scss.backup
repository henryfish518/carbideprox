// 移动端特定优化 - 触摸交互和性能增强
// 触摸优化
.touch-optimized {
  // 触摸目标大小
  .btn, button, .nav-item a, .tab-btn {
    min-height: 44px;
    min-width: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  // 列表项触摸优化
