          }
          
          .article-excerpt {
            font-size: 0.75rem;
          }
        }
      }
    }
  }
}

// 文章页样式
.article-page {
  margin-top: 4rem;
  
  .article-header {
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: white;
    padding: 3rem 0;
    position: relative;
    
    .container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 0 var(--space-md);
      
      .article-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        line-height: 1.2;
        text-align: center;
      }
      
      .article-subtitle {
        font-size: 1.2rem;
        opacity: 0.9;
        text-align: center;
        margin-bottom: 2rem;
        line-height: 1.5;
      }
      
      .article-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 2rem;
        
        .meta-items {
          display: flex;
          gap: 1.5rem;
          
          .meta-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.9rem;
            opacity: 0.9;
            
            i {
              font-size: 1rem;
            }
          }
        }
        
        .article-cover {
          max-width: 300px;
          border-radius: var(--radius-lg);
          overflow: hidden;
          box-shadow: var(--shadow-lg);
          
          img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            transition: transform 0.3s ease;
          }
          
          &:hover img {
            transform: scale(1.05);
          }
        }
      }
    }
  }
  
  .article-content {
    padding: 3rem 0;
    
    .container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 0 var(--space-md);
      
      .article-tabs {
        .tab-nav {
          display: flex;
          border-bottom: 2px solid var(--border-color);
          margin-bottom: 2rem;
          
          .tab-btn {
            background: none;
            border: none;
            padding: 1rem 2rem;
            font-size: 1rem;
            font-weight: 500;
            color: var(--text-secondary);
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            
            &:hover {
              color: var(--primary-color);
            }
            
            &.active {
              color: var(--primary-color);
              
              &::after {
                content: '';
                position: absolute;
                bottom: -2px;
                left: 0;
                right: 0;
                height: 2px;
                background: var(--primary-color);
              }
            }
          }
        }
        
        .tab-content {
          display: none;
          animation: fadeIn 0.3s ease;
          
          &.active {
            display: block;
          }
          
          .article-body {
            line-height: 1.8;
            font-size: 1.1rem;
            
            h2, h3, h4 {
              margin: 2rem 0 1rem;
              color: var(--primary-color);
            }
            
            p {
              margin-bottom: 1.5rem;
            }
            
            img {
              max-width: 100%;
              height: auto;
              border-radius: var(--radius-md);
              margin: 1rem 0;
              box-shadow: var(--shadow-md);
            }
          }
          
          .features-section {
            background: var(--bg-secondary);
            padding: 2rem;
            border-radius: var(--radius-lg);
            margin: 2rem 0;
            
            h3 {
              color: var(--primary-color);
              margin-bottom: 1.5rem;
              font-size: 1.5rem;
            }
            
            .features-list {
              list-style: none;
              
              li {
                display: flex;
                align-items: center;
                margin-bottom: 1rem;
                padding: 0.5rem 0;
                
                i {
                  color: var(--success-color);
                  margin-right: 1rem;
                  font-size: 1.2rem;
                }
                
                &:last-child {
                  margin-bottom: 0;
                }
              }
            }
          }
          
          .faq-section {
            margin: 2rem 0;
            
            h3 {
              color: var(--primary-color);
              margin-bottom: 1.5rem;
              font-size: 1.5rem;
            }
            
            .faq-list {
              .faq-item {
                background: var(--bg-primary);
                border: 1px solid var(--border-color);
                border-radius: var(--radius-md);
                padding: 1.5rem;
                margin-bottom: 1rem;
                
                h4 {
                  color: var(--primary-color);
                  margin-bottom: 0.5rem;
                  font-size: 1.1rem;
                }
                
                p {
                  color: var(--text-secondary);
                  margin: 0;
                }
                
                &:hover {
                  border-color: var(--primary-color);
                  box-shadow: var(--shadow-sm);
                }
              }
            }
          }
          
          .comments-section {
            margin: 2rem 0;
            
            h3 {
              color: var(--primary-color);
              margin-bottom: 1.5rem;
              font-size: 1.5rem;
            }
            
            p {
              color: var(--text-secondary);
              font-style: italic;
            }
          }
        }
      }
      
      .article-tags {
        margin-top: 2rem;
        padding-top: 1rem;
        border-top: 1px solid var(--border-color);
        
        .tags-label {
          font-weight: 600;
          margin-right: 1rem;
          color: var(--text-secondary);
        }
        
        .tag {
          display: inline-block;
          background: var(--bg-secondary);
          color: var(--text-secondary);
          padding: 0.25rem 0.75rem;
          border-radius: 20px;
          margin: 0.25rem;
          text-decoration: none;
          font-size: 0.85rem;
          transition: all 0.3s ease;
          
          &:hover {
            background: var(--primary-color);
            color: white;
            transform: translateY(-1px);
          }
        }
      }
    }
  }
  
  .related-articles {
    background: var(--bg-secondary);
    padding: 3rem 0;
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 var(--space-md);
      
      .section-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 2rem;
        text-align: center;
      }
      
      .related-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
        
        .related-card {
          background: var(--bg-primary);
          border-radius: var(--radius-lg);
          overflow: hidden;
          box-shadow: var(--shadow-md);
          transition: all 0.3s ease;
          
          &:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
          }
          
          .related-image {
            height: 180px;
            overflow: hidden;
            
            img {
              width: 100%;
              height: 100%;
              object-fit: cover;
              transition: transform 0.3s ease;
            }
            
            &:hover img {
              transform: scale(1.1);
            }
          }
          
          .related-content {
            padding: 1.5rem;
            
            h4 {
              margin-bottom: 0.75rem;
              
              a {
                text-decoration: none;
                color: var(--text-primary);
                font-size: 1.1rem;
                font-weight: 600;
                line-height: 1.3;
                
                &:hover {
                  color: var(--primary-color);
                }
              }
            }
            
            .related-excerpt {
              color: var(--text-secondary);
              margin-bottom: 1rem;
              line-height: 1.5;
              font-size: 0.9rem;
              min-height: 2.7rem;
              overflow: hidden;
              display: -webkit-box;
              -webkit-line-clamp: 2;
              -webkit-box-orient: vertical;
            }
            
            .related-meta {
              display: flex;
              justify-content: space-between;
              align-items: center;
              font-size: 0.8rem;
              color: var(--text-secondary);
              
              time {
                opacity: 0.8;
              }
              
              .related-views {
                background: var(--bg-secondary);
                padding: 0.25rem 0.5rem;
                border-radius: 12px;
                font-size: 0.75rem;
              }
            }
          }
        }
        
        .no-related {
          text-align: center;
          color: var(--text-secondary);
          font-style: italic;
          grid-column: 1 / -1;
        }
      }
    }
  }
}

// 移动端特定优化 - 触摸交互和性能增强
// 触摸优化
.touch-optimized {
  // 触摸目标大小
  .btn, button, .nav-item a, .tab-btn {
    min-height: 44px;
    min-width: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  // 列表项触摸优化
  .article-card, .resource-card, .related-card {
    position: relative;
    
    &::before {
      content: '';
      position: absolute;
      top: -5px;
      left: -5px;
      right: -5px;
      bottom: -5px;
      pointer-events: none;
    }
    
    &:active {
      background-color: rgba(var(--primary-rgb), 0.05);
      transform: translateY(1px);
      transition: all 0.1s ease;
    }
  }
}

// 防止点击延迟
* {
  -webkit-tap-highlight-color: transparent;
  tap-highlight-color: transparent;
}

// 移动端滚动优化
@media (max-width: 768px) {
  html {
    scroll-behavior: smooth;
    
    // iOS Safari 滚动优化
    body {
      -webkit-overflow-scrolling: touch;
      overflow-scrolling: touch;
      
      // 隐藏滚动条但保持可滚动
      &::-webkit-scrollbar {
        display: none;
      }
    }
  }
  
  // 移动端性能优化
  .performance-optimized {
    // 图片懒加载优化
    img {
      opacity: 0;
      transition: opacity 0.3s ease;
      
      &.loaded {
        opacity: 1;
      }
    }
    
    // 减少动画复杂度
    * {
      animation-duration: 0.3s;
      transition-duration: 0.3s;
    }
    
    // 禁用不必要的动画
    @media (prefers-reduced-motion: reduce) {
      * {
        animation-duration: 0.01ms;
        animation-iteration-count: 1;
        transition-duration: 0.01ms;
      }
    }
  }
  
  // 移动端输入优化
  .input-optimized {
    // 表单输入优化
    input[type="text"],
    input[type="email"],
    input[type="password"],
    input[type="search"],
    input[type="tel"],
    input[type="url"],
    textarea {
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
      border-radius: var(--radius-md);
      font-size: 16px; // 防止iOS缩放
      
      &:focus {
        outline: none;
        box-shadow: 0 0 0 3px rgba(var(--primary-rgb), 0.1);
      }
    }
    
    // 选择框优化
    select {
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
      background-image: url("data:image/svg+xml;charset=US-ASCII,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 4 5'><path fill='%23333' d='M2 0L0 2h4zm0 5L0 3h4z'/></svg>");
      background-repeat: no-repeat;
      background-position: right 0.75rem center;
      background-size: 0.65rem auto;
      padding-right: 2.5rem;
    }
  }
  
  // 移动端导航优化
  .nav-optimized {
    // 固定导航栏优化
    .navbar {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      backdrop-filter: blur(10px);
      background: rgba(var(--bg-primary-rgb), 0.95);
      
      // 阴影效果
      &::after {
        content: '';
        position: absolute;
        bottom: -5px;
        left: 0;
        right: 0;
        height: 5px;
        background: linear-gradient(to bottom, rgba(0,0,0,0.1), transparent);
      }
    }
    
    // 移动端主体内容间距
    .main-content {
      margin-top: 3.5rem;
      
      // 底部安全区域
      padding-bottom: env(safe-area-inset-bottom);
    }
    
    // 移动端底部导航安全区域
    .footer {
      padding-bottom: calc(1rem + env(safe-area-inset-bottom));
    }
  }
  
  // 移动端图片优化
  .image-optimized {
    // 响应式图片
    img {
      max-width: 100%;
      height: auto;
      
      // 图片加载占位符
      &[data-src] {
        background: #f5f5f5;
      }
      
      // 圆角优化
      &.rounded {
        border-radius: var(--radius-md);
      }
      
      &.circle {
        border-radius: 50%;
      }
    }
    
    // 背景图片优化
    .bg-image {
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      
      // 移动端优化
      @media (max-width: 480px) {
        background-attachment: scroll;
      }
    }
  }
  
  // 移动端布局优化
  .layout-optimized {
    // 单列布局
    .single-column {
      display: flex;
      flex-direction: column;
      
      // 主要内容
      .main-column {
        order: 2;
      }
      
      // 侧边栏移动到底部
      .sidebar {
        order: 3;
        
        &.mobile-bottom {
          position: fixed;
          bottom: 0;
          left: 0;
          right: 0;
          background: var(--bg-primary);
          border-top: 1px solid var(--border-color);
          padding: 0.75rem 1rem;
          z-index: 999;
          
          // 安全区域支持
          padding-bottom: calc(0.75rem + env(safe-area-inset-bottom));
        }
      }
    }
    
    // 网格布局优化
    .grid-layout {
      grid-template-columns: 1fr;
      gap: 1rem;
      
      &.cols-2 {
        grid-template-columns: repeat(2, 1fr);
      }
      
      &.cols-3 {
        grid-template-columns: repeat(2, 1fr);
        
        @media (max-width: 480px) {
          grid-template-columns: 1fr;
        }
      }
    }
  }
  
  // 移动端组件优化
  .component-optimized {
    // 卡片组件
    .card {
      border-radius: var(--radius-lg);
      overflow: hidden;
      
      // 触摸阴影
      &:active {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
      }
    }
    
    // 模态框优化
    .modal {
      background: rgba(0, 0, 0, 0.5);
      backdrop-filter: blur(5px);
      
      .modal-content {
        border-radius: var(--radius-lg);
        margin: 1rem;
        max-height: calc(100vh - 2rem);
        
        // 安全区域
        padding-bottom: env(safe-area-inset-bottom);
      }
    }
    
    // 下拉菜单优化
    .dropdown {
      position: fixed;
      top: auto;
      bottom: 0;
      left: 0;
      right: 0;
      max-height: 50vh;
      border-radius: var(--radius-lg) var(--radius-lg) 0 0;
      
      // 安全区域
      padding-bottom: env(safe-area-inset-bottom);
    }
  }
}

// 深色模式移动端优化
@media (max-width: 768px) and (prefers-color-scheme: dark) {
  .dark-mode-optimized {
    // 深色模式下的触摸优化
    .touch-optimized {
      .article-card, .resource-card, .related-card {
        &:active {
          background-color: rgba(255, 255, 255, 0.05);
        }
      }
    }
    
    // 深色模式下的输入框
    .input-optimized {
      input, textarea {
